<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/colorWhite"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/change_item_color"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img_large_image"
            android:layout_width="128dp"
            android:layout_height="128dp" />

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_toEndOf="@id/img_large_image"
            tools:text="@string/app_name"
            android:id="@+id/txt_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_toEndOf="@id/img_large_image"
            android:layout_below="@id/txt_first_name"
            tools:text="@string/app_name"
            android:id="@+id/txt_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_state"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_below="@id/txt_last_name"
            android:layout_toEndOf="@id/img_large_image"
            tools:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_city"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:gravity="center"
            tools:text="@string/app_name"
            android:layout_toEndOf="@id/img_large_image"
            android:layout_below="@id/txt_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_phone"
            android:textSize="16sp"
            tools:text="@string/app_name"
            android:gravity="center"
            android:layout_toEndOf="@id/img_large_image"
            android:layout_below="@id/txt_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>